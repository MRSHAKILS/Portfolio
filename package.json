{
  "name": "portfolio-app",
  "version": "1.0.0",
  "description": "ðŸš€ A modern, full-stack portfolio application built with React, FastAPI, and MongoDB",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && python -m uvicorn server:app --reload --host 0.0.0.0 --port 8000",
    "build": "cd frontend && npm run build",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "cp backend/.env.example backend/.env && cp frontend/.env.example frontend/.env",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && flake8 . && black --check . && isort --check-only .",
    "format": "concurrently \"npm run format:frontend\" \"npm run format:backend\"",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && black . && isort .",
    "clean": "concurrently \"npm run clean:frontend\" \"npm run clean:backend\"",
    "clean:frontend": "cd frontend && rm -rf node_modules build",
    "clean:backend": "cd backend && rm -rf __pycache__ .pytest_cache",
    "docs": "echo 'Opening documentation...' && start README.md"
  },
  "keywords": [
    "portfolio",
    "react",
    "fastapi",
    "mongodb",
    "tailwindcss",
    "full-stack",
    "modern",
    "responsive"
  ],
  "author": {
    "name": "MRSHAKILS",
    "url": "https://github.com/MRSHAKILS"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MRSHAKILS/Portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/MRSHAKILS/Portfolio/issues"
  },
  "homepage": "https://github.com/MRSHAKILS/Portfolio#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ]
}
